<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
    <!-- 모바일 메뉴관리 메뉴ID... START -->
    <bean name="egovMobileMenuIdGnrService" class="org.egovframe.rte.fdl.idgnr.impl.EgovTableIdGnrServiceImpl" destroy-method="destroy">
        <property name="dataSource" ref="egov.dataSource" />
        <property name="strategy"   ref="MobileMenuIdStrategy" />
        <property name="blockSize"  value="1"/>
        <property name="table"      value="COMTECOPSEQ"/>
        <property name="tableName"  value="MOBILE_MENU_ID"/>
    </bean>

    <bean name="MobileMenuIdStrategy" class="org.egovframe.rte.fdl.idgnr.impl.strategy.EgovIdGnrStrategyImpl">
        <property name="prefix" value="MENU_" />
        <property name="cipers" value="10" />
        <property name="fillChar" value="0" />
    </bean> 
    <!-- 모바일 메뉴관리 메뉴ID... START -->           
</beans>
